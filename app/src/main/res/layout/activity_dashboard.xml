<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b486b"
    android:orientation="vertical"
    tools:context=".activities.home.DashboardActivity">

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/text_field_boxes"
        android:layout_width="680px"
        android:layout_height="wrap_content"
        app:hasClearButton="true"
        app:labelText="Label"
        app:panelBackgroundColor="#fff"
        app:primaryColor="#f56217"
        app:secondaryColor="#000">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/extended_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000" />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/text_field_boxes1"
        android:layout_width="680px"
        android:layout_height="wrap_content"
        app:hasClearButton="true"
        app:labelText="Label"
        app:panelBackgroundColor="#fff"
        app:primaryColor="#f56217"
        app:secondaryColor="#000">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/extended_edit_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000" />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
</LinearLayout>