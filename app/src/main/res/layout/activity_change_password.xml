<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.opensource.myapplication.activities.ChangePassword">

    <android.support.v7.widget.CardView
        android:id="@+id/cdv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cdv1"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"

        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/gradient1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Change Your Password"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edcng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@android:drawable/editbox_dropdown_dark_frame"
                android:hint="New Password"
                android:textAlignment="center"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/edcng_cnf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edcng"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@android:drawable/editbox_dropdown_dark_frame"
                android:hint="New Password"
                android:textAlignment="center"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btncng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edcng_cnf"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/edcng_cnf"
                android:layout_below="@+id/edpwd"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_style"
                android:text="Submit"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvwarn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btncng"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textColor="#bc1818"
                android:textSize="10dp"
                android:textStyle="italic" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
